{
  "name": "react-avancado-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src --max-warnings=0",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand",
    "generate": "yarn plop --plopfile generators/plopfile.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "postinstall": "husky install",
    "prepare": "husky install",
    "schema:download": "apollo client:download-schema --endpoint=http://localhost:1337/graphql schema.gql",
    "schema:convert": "node convertToNonNull.js",
    "types:generate": "yarn schema:download && yarn schema:convert && yarn codegen",
    "codegen": "apollo codegen:generate --target typescript --excludes=node_modules/ --includes=src/graphql/**/*.ts --localSchemaFile schema.gql --tagName=gql --outputFlat src/graphql/generated",
    "cypress:open": "cypress open"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.5.8",
    "@stripe/react-stripe-js": "^1.7.0",
    "@stripe/stripe-js": "^1.26.0",
    "@testing-library/cypress": "^8.0.2",
    "@types/lodash.xor": "^4.5.6",
    "graphql": "^15.5.1",
    "joi": "^17.6.0",
    "lodash.xor": "^4.5.0",
    "next": "12",
    "next-auth": "3.19",
    "next-pwa": "^5.3.1",
    "nextjs-progressbar": "^0.0.13",
    "polished": "^4.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-slick": "^0.28.1",
    "styled-components": "5.3.1",
    "styled-icons": "^10.45.0",
    "styled-media-query": "^2.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@storybook/addon-essentials": "6.4.14",
    "@storybook/react": "6.4.14",
    "@storybook/theming": "^6.4.14",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.27",
    "@types/react-slick": "^0.23.8",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "rc-v5",
    "@typescript-eslint/parser": "rc-v5",
    "apollo": "^2.33.9",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.13.2",
    "cypress": "^9.5.4",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.1-rc.0-next-fe905f152-20220107",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "jest-styled-components": "^7.0.5",
    "lint-staged": "^11.2.3",
    "msw": "^0.39.2",
    "plop": "^2.7.4",
    "prettier": "^2.4.1",
    "storybook-addon-next-router": "^3.1.1",
    "typescript": "^4.4.3",
    "whatwg-fetch": "^3.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
